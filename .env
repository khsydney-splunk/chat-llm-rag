############################
# RUNTIME & APP SETTINGS
############################
# Used by Streamlit to call the API
API_BASE=http://localhost:8000

# Paths
DOCS_DIR=./data/docs

# RAG knobs (optional)
CHUNK_SIZE=1200
CHUNK_OVERLAP=120
TOP_K=5

############################
# LLM / EMBEDDINGS
############################
# Pick ONE path below.

# --- If using OpenAI for chat/LLM (optional) ---
CHAT_MODEL=gpt-4o-mini
TEMPERATURE=0.2

# --- If using Hugging Face for embeddings (recommended in your setup) ---
EMBEDDING_MODEL=BAAI/bge-m3
# If model is gated/private, add a token (optional):
# HUGGINGFACE_HUB_TOKEN=hf_...

############################
# MILVUS (Vector DB)
############################
MILVUS_URI=http://localhost:19530
MILVUS_COLLECTION=rag_chunks
# Optional auth if you use Milvus with auth enabled:
# MILVUS_USER=root
# MILVUS_PASSWORD=pass
# MILVUS_DB_NAME=default

############################
# OPENTELEMETRY (SDK → Collector)
############################
# Apps export via OTLP gRPC to your local Collector
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp
# Use the latest GenAI semantic conventions (for LLM metrics/attrs)
OTEL_SEMCONV_STABILITY_OPT_IN=gen_ai_latest_experimental
# Add useful resource attrs
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=dev

############################
# OPENLLMETRY (Traceloop SDK → Collector)
############################
# Traceloop uses OTLP/HTTP; point it at Collector's HTTP receiver
TRACELOOP_BASE_URL=http://localhost:4318
TRACELOOP_CAPTURE_RAG=true
# Privacy toggles (optional)
# TRACELOOP_TRACE_CONTENT=false
# TRACELOOP_TELEMETRY=false

